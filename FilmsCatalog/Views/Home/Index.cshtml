@model Page<Movie>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Director</th>
            <th scope="col">Release Date</th>
        </tr>
    </thead>
    
    <tbody>
@foreach (var aMovie in Model)
{
        <tr>
            <td> 
                <a 
                    asp-controller="Home"
                    asp-action="Show"
                    asp-route-id=@aMovie.MovieId>
                    @aMovie.Title
                </a>
            </td>
            <td>@aMovie.Director</td>
            <td>@aMovie.ReleaseDate</td>
        </tr>
}
    </tbody>
</table>